{
  "name": "chatting-room",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist coverage",
    "start": "node dist",
    "build": "tsc",
    "dev": "nodemon",
    "test": "jest",
    "lint": "tslint -p . -c tslint.json",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md}\""
  },
  "repository": "git@github.com:orangeflame/chatting-room.git",
  "author": "le.zheng <le.zheng@ef.com>",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.215.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "http-status-codes": "^1.3.0",
    "luxon": "^1.0.0",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "shortid": "^2.2.8",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "@types/luxon": "^0.5.0",
    "@types/passport": "^0.4.3",
    "@types/passport-http": "^0.3.5",
    "@types/shortid": "^0.0.29",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.8",
    "jest": "^22.4.3",
    "jest-junit": "^3.6.0",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-immutable": "^4.5.2",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.1"
  },
  "jest": {
    "setupFiles": [
      "./jest/mocks.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".d.ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
